<% if action_name.in? %w[new create edit update] %>
  <%= render "action_bar_save_button", f: f %>
<% elsif action_name == "show" %>
  <%= render "action_bar_edit_button" %>
  <%= render "action_bar_new_button" %>
  <%= render "action_bar_destroy_button" %>
<% end %>

<%= render "action_bar_back_button" %>
